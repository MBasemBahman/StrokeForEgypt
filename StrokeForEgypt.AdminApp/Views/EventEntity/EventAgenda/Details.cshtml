@model EventAgenda
@inject UnitOfWork _UnitOfWork
@inject CommonLocalizationService CommonLocalizer
@inject EntityLocalizationService EntityLocalizer
@{
    Layout = "_AssetsLayout";
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="" class="form-horizontal">
            <section class="card">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group row">
                        <label asp-for="Event" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="@_UnitOfWork.Event.GetByID(Model.Fk_Event).Result.Title" class="form-control" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Title" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ShortDescription" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <textarea rows="2" asp-for="ShortDescription" class="form-control" disabled></textarea>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="LongDescription" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            @Html.Raw(Model.LongDescription)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="FromDate" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input id="_Date" value="@String.Format("{0:MM / dd / yyyy  hh:mm tt}",Model.FromDate)" class=" form-control " disabled>
                        </div>
                        <label asp-for="FromTime" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="FromTime" class="form-control" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ToDate" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input id="_Date" value="@String.Format("{0:MM / dd / yyyy  hh:mm tt}",Model.ToDate)" class=" form-control " disabled>
                        </div>
                        <label asp-for="ToTime" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="ToTime" class="form-control" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Order" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Order" class="form-control" disabled>
                        </div>
                        <label asp-for="IsActive" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="IsActive" class="form-control" disabled>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label asp-for="LastModifiedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input id="LastModifiedAt" value="@String.Format("{0:MM / dd / yyyy  hh:mm tt}",Model.LastModifiedAt)" class=" form-control " disabled>
                        </div>
                        <label asp-for="LastModifiedBy" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="LastModifiedBy" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CreatedAt" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input id="CreatedAt" value="@String.Format("{0:MM / dd / yyyy  hh:mm tt}",Model.CreatedAt)" class=" form-control " disabled>
                        </div>
                        <label asp-for="CreatedBy" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="CreatedBy" class="form-control" disabled>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("PartialView/_DetailsPagePartial");}
}
